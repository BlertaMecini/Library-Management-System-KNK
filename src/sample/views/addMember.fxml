<AnchorPane fx:id="rootPane" prefHeight="320.0" prefWidth="512.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.addMemberController">
   <children>
      <VBox layoutX="42.0" layoutY="23.0" prefHeight="450.0" prefWidth="521.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TextField fx:id="memberID" promptText="MemberID " styleClass="mtextfield" stylesheets="@../resources/styles/addmember.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="name" layoutX="10.0" layoutY="10.0" promptText="Name" styleClass="mtextfield" stylesheets="@../resources/styles/addmember.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="email" layoutX="10.0" layoutY="10.0" promptText="E-mail" styleClass="mtextfield" stylesheets="@../resources/styles/addmember.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="phone" layoutX="10.0" layoutY="60.0" prefWidth="492.0" promptText="Phone" styleClass="mtextfield" stylesheets="@../resources/styles/addmember.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="CENTER_LEFT" prefHeight="21.0" prefWidth="600.0" style="-fx-font-size: 14;">
               <children>
                  <Label fx:id="genderLabel" text="Gender : ">
                     <HBox.margin>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <RadioButton fx:id="female" mnemonicParsing="false" text="Female" textAlignment="RIGHT">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="gender" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="male" mnemonicParsing="false" text="Male" textAlignment="RIGHT" toggleGroup="$gender">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </RadioButton>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="510.0">
               <children>
                  <Button fx:id="saveButton" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#saveButton" prefHeight="100.0" prefWidth="229.0" styleClass="addMemberBtn" stylesheets="@../resources/styles/addmember.css" text="Save">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></Button>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButton" prefHeight="60.0" prefWidth="237.0" styleClass="addMemberBtn" stylesheets="@../resources/styles/addmember.css" text="Cancel">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
